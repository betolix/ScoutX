<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.h3llo.scoutx">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_whatshot"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_whatshot"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScoutX"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity"></activity>
        <!-- HEY ESTO NO DEBE IR, DEBE ESTAR EN UN AMBIENTE HTTPS CON SSL, PASSWORD TRAVELS UNENCRYPTED -->
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>